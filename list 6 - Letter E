using System;


namespace Atividade_05___02
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("escolha uma opção entre 1, 2, 3");
			
			int num = int.Parse(Console.ReadLine());
			
			switch(num){
					case 1: Console.WriteLine("esse é o numero 1"); break;
					case 2: Console.WriteLine("esse é o numero 2"); break;
					case 3: Console.WriteLine("esse é o numero 3"); break;
			}
			
			Console.Write("Press a nny key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
