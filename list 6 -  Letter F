using System;


namespace Atividade_05___02
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("verifica se é positivo, negativo ou nulo");
			
			int num = int.Parse(Console.ReadLine());
			
			switch(num){
					case -1: Console.WriteLine("esse é o negativo"); break;
					case 0: Console.WriteLine("esse é o nulo"); break;
					case 1: Console.WriteLine("esse é o positivo"); break;
					default: Console.WriteLine("num invalido"); break;
			}
			
			Console.Write("Press a nny key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
